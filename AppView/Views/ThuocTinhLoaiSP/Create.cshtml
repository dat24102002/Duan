@model AppData.Models.ThuocTinhLoaiSP

@{
    Layout = "~/Views/Shared/_LayoutforAdmin.cshtml";
    ViewData["Title"] = "Create";
    AppData.Models.AssignmentDBContext dBContext = new AppData.Models.AssignmentDBContext();
}

<h1>Create</h1>

<h4>ThuocTinhLoaiSP</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <lable>Ten ThuocTinh</lable>
                <div>
                    <select class="form-control" name="IDThuocTinh">
                        @foreach (var thuoctinh in dBContext.ThuocTinhs.ToList())
                        {
                            <option value="@thuoctinh.ID">@thuoctinh.Ten</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <br />
            </div>
            <div class="form-group">
                <lable>Ten LoaiSP</lable>
                <div>
                    <select class="form-control" name="IDLoaiSP">
                        @foreach (var loaisp in dBContext.LoaiSPs.ToList())
                        {
                            <option value="@loaisp.ID">@loaisp.Ten</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
