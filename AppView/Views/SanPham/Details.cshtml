@model AppData.Models.SanPham

@{
    Layout = "~/Views/Shared/_LayoutforAdmin.cshtml";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ten)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        <dt class = "col-sm-2">
            Ten Loai SP
        </dt>
        <dd class = "col-sm-10">
            @{
                AppData.Models.AssignmentDBContext dBContext = new AppData.Models.AssignmentDBContext();
                var LoaiSP = dBContext.LoaiSPs.Find(Model.IDLoaiSP);
                if (LoaiSP != null)
                {
                    <div>
                        <strong style="color:red;">
                            <span>
                                @LoaiSP.Ten
                            </span>
                        </strong>
                    </div>
                }
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Update", new { id=Model.ID }) |
    <a asp-action="Index">Back to List</a>
</div>
